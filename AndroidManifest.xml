            android:name="com.example.financereborn.activities.WelcomeViewActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.financereborn.activities.LoginViewActivity"
            android:label="@string/title_activity_login_view" >
