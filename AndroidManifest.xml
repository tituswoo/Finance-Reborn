        <activity
            android:name="com.example.financereborn.activities.RegisterViewActivity"
            android:label="@string/title_activity_register_view" >
        </activity>
        <activity
            android:name="com.example.financereborn.activities.DashboardViewActivity"
            android:label="@string/title_activity_dashboard_view" >
        </activity>
        <activity
            android:name="com.example.financereborn.activities.CreateNewAccountViewActivity"
